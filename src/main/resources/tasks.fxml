<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sk.stuba.collab.study.client.controllers.TasksController"
      spacing="10"
      prefWidth="700"
      prefHeight="500">

    <Label fx:id="groupTitleLabel"
           text="Group:"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"
           alignment="CENTER"/>

    <ListView fx:id="tasksList"
              prefHeight="250"/>

    <Label text="New task:" style="-fx-font-size: 16px;"/>

    <TextField fx:id="newTaskTitleField"
               promptText="Title"/>

    <TextArea fx:id="newTaskDescField"
              promptText="Description"
              prefRowCount="3"/>

    <HBox alignment="CENTER" spacing="10">
        <Button text="Add Task" onAction="#addTask"/>
        <Button text="Refresh" onAction="#refreshTasks"/>
        <Button text="Invite" onAction="#inviteUser"/>
    </HBox>

    <Label fx:id="statusLabel"
           textFill="red"
           style="-fx-font-size: 14px;"
           alignment="CENTER"/>

</VBox>
