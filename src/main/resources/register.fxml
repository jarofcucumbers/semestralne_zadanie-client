<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sk.stuba.collab.study.client.controllers.RegisterController"
      alignment="CENTER" spacing="10" prefWidth="400" prefHeight="300">

    <Label text="Register" style="-fx-font-size: 20px;"/>

    <TextField fx:id="nameField" promptText="Name" maxWidth="250"/>
    <TextField fx:id="emailField" promptText="Email" maxWidth="250"/>
    <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Create account" onAction="#handleRegister"/>
        <Button text="Back to login" onAction="#goToLogin"/>
    </HBox>

    <Label fx:id="statusLabel" textFill="red"/>

</VBox>
