<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="sk.stuba.collab.study.client.controllers.GroupsController"
      spacing="10" alignment="CENTER" prefWidth="400" prefHeight="300">

    <Label text="Your Groups" style="-fx-font-size: 18px;"/>

    <ListView fx:id="groupsList" prefHeight="200"/>

    <Button text="Open Group" onAction="#openSelectedGroup"/>

    <Label fx:id="statusLabel" textFill="red"/>

</VBox>
